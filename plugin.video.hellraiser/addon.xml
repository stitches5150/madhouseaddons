<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.hellraiser" name="HellRaiser" version="1.0.0" provider-name="Bonecrusher">
	<requires>
		<import addon="xbmc.python" version="2.19.0"/>
		<import addon="script.module.requests" version="2.9.1"/>
		<import addon="script.module.futures" version="2.2.0"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>video audio</provides>
	</extension>
	<extension point="xbmc.service" library="service.py" start="login">
	</extension>
	<extension point="kodi.context.item">
		<menu id="kodi.core.main">
			<menu>
				<label>hellraiser</label>
				<item library="context_toggle.py">
					<label>Preferred toggle</label>
					<visible>!System.HasAddon(context.hellraiser) + !Skin.HasSetting(Toggling)</visible>
				</item>
				<item library="context_movie.py">
					<label>$ADDON[plugin.video.hellraiser 30602]</label>
					<visible>String.IsEqual(ListItem.dbtype,movie) + String.Contains(ListItem.Path, plugin.video.hellraiser)</visible>
				</item>
				<item library="context_tvshow.py">
					<label>$ADDON[plugin.video.hellraiser 30602]</label>
					<visible>String.IsEqual(ListItem.dbtype,tvshow) + String.Contains(ListItem.Path, plugin.video.hellraiser)</visible>
				</item>
				<item library="context_live.py">
					<label>$ADDON[plugin.video.hellraiser 30602]</label>
					<visible>[String.Contains(ListItem.FileNameAndPath, plugin.video.hellraiser\\Live) | String.Contains(ListItem.FileNameAndPath, plugin.video.hellraiser\\Live)]</visible>
				</item>
				<item library="context_playable.py">
					<label>$ADDON[plugin.video.hellraiser 30622]</label>
					<visible>!System.HasAddon(context.hellraiser) + !Skin.HasSetting(Contexting)</visible>
				</item>
			</menu>
		</menu>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<language></language>
		<summary lang="en">This addon is a fork of metal gear for the upcoming build im doing. This Addon allows you to browse and search for media and then pass that to whatever addon you want to play it with</summary>
		<description lang="en">This Addon allows you to browse and search for media and then pass that to whatever addon you want to play it with. [COLOR cyan]I take no Credit for 99.99% of this code. Without the original developers,  this add-on would never exist. Thanks for all they have doen to the community.[/COLOR]</description>
		<supportedcontent>
			<content>movies</content>
			<content>tvshows</content>
			<content>episodes</content>
			<content>musicvideos</content>
			<content>music</content>
			<content>livetv</content>
		</supportedcontent>
		<genre>movies,tv,music,livetv</genre>
		<!--<video_guide>yt-id</video_guide>
		<video_preview>yt-id</video_preview>-->
		<forum></forum>
		<source></source>
		<email></email>
		<news></news>
                <website></website>

		<source></source>

		<assets>

			<icon>icon.png</icon>

			<fanart>fanart.jpg</fanart>

		</assets>

		<news></news>

	</extension>

</addon>
